html,
body
	height 100%
$bg
	background-color main
	.content
		width 95%
		text-align center
		padding rem(110px) 0 rem(46px)
.menu-link
	text-decoration none
	color grey
	&:hover
		color green
		text-decoration underline

.icon-small
	cursor pointer
	padding rem(2px)
	border-radius rem(3px)
	width rem(10px)
	height rem(10px)
	fill main
	color grey
	font-size small
	&:hover
		color red

.bar-header
	background sec
	padding rem(10px) rem(20px)
	box-shadow 0 -3px 9px #000
	position fixed
	display flex
	flex-direction row
	width 100%
	z-index 10
	.logo
		margin 0
		line-height rem(35px)
	.logo a
		color main
		text-decoration none
		font-size rem(28px)
		&:after
			transition all .4s
			content 'marco.dev'
			+above(cut)
				content 'Java and Angular in the Cloud'

// Header Post
.header-post
	@extends $bg
	min-height rem(250px)
	position fixed
	width 100%
	.content
		margin auto
		max-width rem(800px)
	.subheader
		display table
		padding 20px
		a
			border 2px solid sec
			border-radius 20px
			padding 0 10px
			+above(cut)
				padding 0 10px

	.date
		mainFont(300)
		font-size rem(16px)
	h1
		font-size rem(30px)
		margin 0 0 30px    
		text-shadow 3px 3px darken(main, 20%)
		+above(cut)
			font-size rem(50px)
	.demo
		font-size x-large
		font-family 'ABeeZee'
		color darkgray
		&:hover
			text-decoration underline;
	.subtitle
		mainFont(300)
		font-size rem(20px)
	h1,.subtitle, .date
		color sec
		text-align center
	a,p
		color sec
		text-decoration none
		mainFont(300)
		font-size rem(18px)